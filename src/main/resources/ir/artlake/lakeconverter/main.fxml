<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<SplitPane fx:id="splitPane" dividerPositions="0.1" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ir.artlake.lakeconverter.MainController">
    <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
    <items>
        <VBox fx:id="leftPane">
            <children>
            </children>

        </VBox>
        <VBox fx:id="rightPane">
            <children>
            <ScrollPane fitToWidth="true" prefHeight="600" prefWidth="200.0">
                <content>
                    <VBox fx:id="convWidgetsContainer" prefHeight="200.0" prefWidth="200.0" />
                </content>
            </ScrollPane>
         <VBox prefHeight="200.0" prefWidth="100.0">
            <children>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                      <children>
                          <Button fx:id="choosingFiles" mnemonicParsing="false" onAction="#onChoosingFileAction" text="Choosing Files" />
                          <Button fx:id="choosingTarget" mnemonicParsing="false" onAction="#onChoosingTargetAction" text="Choosing Target" />
                      </children>
                  </HBox>
                  <Label fx:id="messageLabel" />
                  <Button fx:id="convertButton" onAction="#onConvertAction" text="Convert" />
            </children>
         </VBox>
            </children>
        </VBox>
    </items>





</SplitPane>
