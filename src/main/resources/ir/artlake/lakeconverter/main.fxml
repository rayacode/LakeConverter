<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/20.0.1" fx:controller="ir.artlake.lakeconverter.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox>
      <children>
         <ProgressBar fx:id="progBar" prefWidth="200.0" progress="0.0" />
         <Label fx:id="progressLabel" />
      </children>
   </HBox>
   <HBox prefHeight="100.0" prefWidth="200.0">
      <children>
         <Button fx:id="choosingFiles" mnemonicParsing="false" onAction="#onChoosingFileAction" text="Choosing Files" />
         <Button fx:id="choosingTarget" mnemonicParsing="false" onAction="#onChoosingTargetAction" text="Choosing Target" />
      </children>
   </HBox>
   <VBox fx:id="convWidgetsContainer" prefHeight="200.0" prefWidth="200.0" />
   <Label fx:id="messageLabel" />
    <Button fx:id="convertBtt" onAction="#onHelloButtonClick" text="Convert" />
</VBox>
