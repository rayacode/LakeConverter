<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.VBox?>

<SplitPane fx:id="splitPane" dividerPositions="0.1" stylesheets="@main.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ir.artlake.lakeconverter.MainController">
    <padding>
            <Insets />
        </padding>
    <items>
        <VBox fx:id="leftPane">
            <children>
            </children>

        </VBox>
        <VBox fx:id="rightPane">
            <children>
            <ToolBar id="convertBar" fx:id="convertBar">
               <items>
                    <Button id="choosingFiles" fx:id="choosingFiles" mnemonicParsing="false" onAction="#onChoosingFileAction" styleClass="convertButClass" />
                    <Button id="choosingTarget" fx:id="choosingTarget" mnemonicParsing="false" onAction="#onChoosingTargetAction" styleClass="convertButClass" />
                  <Label fx:id="mergeAllLabel" text="Merg All:" />
                  <ToggleButton id="mergeToggle" fx:id="mergeToggle" mnemonicParsing="false" onAction="#onMergeToggleAction" styleClass="convertButClass" textAlignment="CENTER" />
               </items>
            </ToolBar>
            <ListView id="convListView" fx:id="convListView" opacity="1" />
            <Button id="convertButton" fx:id="convertButton" onAction="#onConvertAction" text="Convert All">
               <VBox.margin>
                  <Insets top="4" />
               </VBox.margin>
            </Button>
            <Label fx:id="messageLabel" />
            </children>
        </VBox>
    </items>





</SplitPane>
